{
   "compilerOptions": {
      "target": "es2015",
      "module": "esnext",
      "jsx": "react-jsx",
      "sourceMap": true,
      "rootDir": "./src",
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "declarationDir": "types",
      "emitDeclarationOnly": true, 
      "lib": [
         "es5",
         "dom",
         "es2015.collection",
         "es2015.promise",
         "ES7"
       ]
   }
}